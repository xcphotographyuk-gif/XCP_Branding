    "id": "bottom-hero-section",
    "elType": "section",
    "settings": {
      "layout": "full_width",
      "gap": "no",
      "height": "min-height",
      "custom_height": {
        "unit": "vh",
        "size": 80
      },
      "background_background": "classic",
      "background_image": {
        "url": "https://via.placeholder.com/1920x900/2a2a2a/ffffff?text=Final+CTA+Background",
        "id": "",
        "alt": "Compelling final call-to-action background image"
      },
      "background_position": "center center",
      "background_size": "cover",
      "background_attachment": "scroll",
      "background_overlay_background": "gradient",
      "background_overlay_color": "rgba(26,26,26,0.6)",
      "background_overlay_color_b": "rgba(26,26,26,0.8)",
      "background_overlay_gradient_angle": {
        "unit": "deg",
        "size": 180
      },
      "padding": {
        "top": "80",
        "right": "20",
        "bottom": "80",
        "left": "20",
        "unit": "px",
        "isLinked": false
      }
