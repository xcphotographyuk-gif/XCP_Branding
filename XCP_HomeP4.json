              },
              "typography_font_weight": "600",
              "typography_letter_spacing": {
                "unit": "px",
                "size": 0.5
              },
              "border_radius": {
                "unit": "px",
                "top": 3,
                "right": 3,
                "bottom": 3,
                "left": 3,
                "isLinked": true
              },
              "button_box_shadow_box_shadow_type": "yes",
              "button_box_shadow_box_shadow": {
                "horizontal": 0,
                "vertical": 6,
                "blur": 20,
                "spread": 0,
                "color": "rgba(212,175,55,0.5)"
              },
              "button_box_shadow_box_shadow_position": "outline",
              "hover_animation": "grow",
              "padding": {
                "top": "22",
                "right": "55",
                "bottom": "22",
                "left": "55",
                "unit": "px",
                "isLinked": false
              }
            }
          }
        ]
      }
    ]
