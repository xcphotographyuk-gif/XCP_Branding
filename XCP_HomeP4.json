              "padding": {
                "top": "0",
                "right": "20",
                "bottom": "0",
                "left": "20",
                "unit": "px"
              }
            }
          },
          {
            "id": "bottom-hero-cta-button",
            "elType": "widget",
            "widgetType": "button",
            "settings": {
              "text": "Contact Us Now",
              "link": {
                "url": "#contact",
                "is_external": false,
                "nofollow": false
              },
              "align": "center",
              "align_tablet": "center",
              "align_mobile": "center",
              "button_type": "primary",
              "size": "xl",
              "button_text_color": "#ffffff",
              "background_color": "#d4af37",
