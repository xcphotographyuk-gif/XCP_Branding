              "text_color": "#f0f0f0",
              "typography_typography": "custom",
              "typography_font_family": "Open Sans",
              "typography_font_size": {
                "unit": "px",
                "size": 20,
                "sizes": {
                  "desktop": 20,
                  "tablet": 18,
                  "mobile": 16
                }
              },
              "typography_font_weight": "300",
              "typography_line_height": {
                "unit": "em",
                "size": 1.6
