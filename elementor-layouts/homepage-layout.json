            },
            {
              "id": "qualifier-form-stage2",
              "elType": "widget",
              "widgetType": "form",
              "settings": {
                "form_name": "Project Qualifier Form",
                "form_fields": [
                  {
                    "custom_id": "event_type",
                    "field_type": "select",
                    "field_label": "Event/Project Type",
                    "placeholder": "Select type",
                    "required": "no",
                    "field_width": "100",
                    "field_options": "Wedding\nPortrait Session\nCommercial Shoot\nCorporate Event\nFamily Photos\nEngagement\nOther"
                  },
                  {
                    "custom_id": "timeline",
                    "field_type": "date",
                    "field_label": "Preferred Timeline/Event Date",
                    "placeholder": "Select date",
                    "required": "no",
                    "field_width": "50"
                  },
                  {
                    "custom_id": "budget",
                    "field_type": "select",
                    "field_label": "Budget Range",
                    "placeholder": "Select range",
                    "required": "no",
                    "field_width": "50",
                    "field_options": "Under £500\n£500 - £1,000\n£1,000 - £2,500\n£2,500 - £5,000\nOver £5,000\nFlexible"
                  },
                  {
                    "custom_id": "location",
                    "field_type": "text",
                    "field_label": "Location/Venue",
                    "placeholder": "Where will the shoot take place?",
                    "required": "no",
                    "field_width": "100"
                  },
                  {
                    "custom_id": "guests",
                    "field_type": "number",
                    "field_label": "Number of Attendees/Subjects",
                    "placeholder": "Approximate number",
                    "required": "no",
                    "field_width": "50",
                    "min": 1
                  },
                  {
                    "custom_id": "duration",
                    "field_type": "select",
                    "field_label": "Expected Duration",
                    "placeholder": "Select duration",
                    "required": "no",
                    "field_width": "50",
                    "field_options": "1-2 hours\n3-4 hours\nHalf day (4-6 hours)\nFull day (8+ hours)\nMultiple days"
                  },
                  {
                    "custom_id": "visibility",
                    "field_type": "radio",
                    "field_label": "Portfolio/Social Media Usage",
                    "required": "no",
                    "field_width": "100",
                    "field_options": "Yes, you may use images for marketing\nNo, please keep images private\nI'd like to discuss this"
                  },
                  {
                    "custom_id": "additional_notes",
                    "field_type": "textarea",
                    "field_label": "Additional Notes or Special Requests",
