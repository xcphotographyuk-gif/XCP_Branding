    {
      "id": "contact-section",
      "elType": "section",
      "isInner": false,
      "settings": {
        "layout": "boxed",
        "content_width": {
          "unit": "px",
          "size": 800
        },
        "background_background": "classic",
        "background_color": "#FFFFFF",
        "_padding": {
          "unit": "px",
          "top": 80,
          "right": 20,
          "bottom": 80,
          "left": 20
        },
        "html_tag": "section",
        "css_classes": "contact-form"
      },
      "elements": [
        {
          "id": "contact-column",
          "elType": "column",
          "isInner": false,
          "settings": {
            "_column_size": 100
          },
          "elements": [
            {
              "id": "contact-heading",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Get Started Today",
                "header_size": "h2",
                "align": "center",
                "title_color": "#2C2C2C",
                "typography_typography": "custom",
                "typography_font_family": "Raleway",
                "typography_font_size": {
                  "unit": "px",
                  "size": 42
                },
                "typography_font_weight": "700",
                "_margin": {
                  "unit": "px",
                  "top": 0,
                  "right": 0,
                  "bottom": 15,
                  "left": 0
                }
              }
            },
            {
              "id": "contact-subheading",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p style='text-align: center; color: #666666; font-size: 18px; margin-bottom: 40px;'>Fill out the quick form below and let's discuss how we can bring your vision to life.</p>"
              }
            },
            {
              "id": "contact-form-stage1",
              "elType": "widget",
              "widgetType": "form",
              "settings": {
                "form_name": "Quick Contact Form",
                "form_fields": [
                  {
                    "custom_id": "name",
                    "field_type": "text",
                    "field_label": "Your Name",
                    "placeholder": "Enter your full name",
                    "required": "yes",
                    "field_width": "100"
                  },
                  {
                    "custom_id": "email",
                    "field_type": "email",
                    "field_label": "Email Address",
                    "placeholder": "your.email@example.com",
                    "required": "yes",
                    "field_width": "100"
                  },
                  {
                    "custom_id": "phone",
                    "field_type": "tel",
                    "field_label": "Phone Number",
                    "placeholder": "Your contact number",
                    "required": "no",
                    "field_width": "100"
                  },
                  {
                    "custom_id": "requirement",
                    "field_type": "textarea",
                    "field_label": "General Requirement Description",
                    "placeholder": "Tell us about your photography needs (wedding, portrait, commercial, event, etc.)",
                    "required": "yes",
                    "rows": 5,
                    "field_width": "100"
                  }
                ],
                "button_text": "Submit & Continue",
                "button_size": "md",
                "button_align": "center",
                "button_background_color": "#D4AF37",
                "button_text_color": "#000000",
                "button_typography_typography": "custom",
                "button_typography_font_family": "Raleway",
                "button_typography_font_size": {
                  "unit": "px",
                  "size": 18
                },
                "button_typography_font_weight": "600",
                "form_fields_background_color": "#F9F9F9",
                "form_fields_text_color": "#2C2C2C",
                "field_border_radius": {
                  "unit": "px",
                  "top": 4,
                  "right": 4,
                  "bottom": 4,
                  "left": 4
                },
                "submit_actions": ["email", "redirect"],
                "email_to": "info@xcphotography.com",
                "email_subject": "New Contact Form Submission",
                "redirect_to": "#qualifier-form"
              }
            }
          ]
        }
      ]
