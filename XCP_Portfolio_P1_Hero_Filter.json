        {
          "id": "intro_col",
          "elType": "column",
          "settings": {"_column_size": 100},
          "elements": [
            {
              "id": "intro_text",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<h2 style='text-align: center; margin-bottom: 20px;'>Your Brand. Your Audience. Your Story.</h2><p style='text-align: center; max-width: 800px; margin: 0 auto; font-size: 1.1rem;'>Browse work by category to see how strategic imagery transforms brands across industriesâ€”from corporate portraits that command respect to documentary storytelling that creates emotional connection.</p>"
              }
            }
          ]
        }
      ]
