{
  "version": "0.4",
  "title": "XCP Portfolio - Hero & Featured Gallery",
  "type": "page",
  "content": [
    {
      "id": "portfolio_hero",
      "elType": "section",
      "settings": {
        "layout": "full_width",
        "min_height": {"unit": "vh", "size": 75},
        "background_background": "classic",
        "background_image": {"url": "[uc_local]assets/images/portfolio-hero.jpg"},
        "background_position": "center center",
        "background_size": "cover",
        "background_attachment": "scroll",
        "content_position": "middle",
        "padding": {"unit": "%", "top": 10, "right": 5, "bottom": 10, "left": 5}
      },
      "elements": [
        {
          "id": "portfolio_hero_col",
          "elType": "column",
          "settings": {"_column_size": 100},
          "elements": [
            {
              "id": "portfolio_title",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Stories That Resonate",
                "header_size": "h1",
                "align": "center",
                "color": "#ffffff"
              }
            },
            {
              "id": "portfolio_subtitle",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p style='text-align: center; font-size: 1.25rem; max-width: 700px; margin: 0 auto; color: #ffffff;'>Every image tells a story. Every story creates connection. See how brands like yours have elevated their visual presence and connected with their ideal audience.</p>",
                "align": "center"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "portfolio_intro",
      "elType": "section",
      "settings": {
        "layout": "boxed",
