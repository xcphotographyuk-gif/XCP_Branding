{
  "version": "0.4",
  "title": "XCP Home Part 1 - Hero & Gallery",
  "type": "page",
  "content": [
    {
      "id": "hero-section",
      "elType": "section",
      "settings": {
        "_title": "Hero Section",
        "layout": "full_width",
        "content_width": "full",
        "min_height": {"unit": "vh", "size": 75},
        "background_background": "classic",
        "background_image": {"url": "[uc_local]assets/images/hero-woman-hair.jpg"},
        "background_size": "cover",
        "background_position": "center center",
        "background_repeat": "no-repeat",
        "padding": {"unit": "px", "top": "100", "right": "20", "bottom": "100", "left": "20", "isLinked": false},
        "content_position": "middle",
        "flex_direction": "column",
        "flex_align_items": "center",
        "flex_justify_content": "center"
      },
      "elements": [
        {
          "id": "hero-content",
          "elType": "column",
          "settings": {
            "_column_size": 100,
            "content_width": "full"
          },
          "elements": [
            {
              "id": "hero-heading",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Your Story Deserves to Be Seen",
                "header_size": "h1",
                "align": "center",
                "typography_typography": "custom",
                "typography_font_size": {"unit": "px", "size": 56},
                "typography_font_size_mobile": {"unit": "px", "size": 36},
                "color": "#FFFFFF"
              }
            },
            {
              "id": "hero-subheading",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p style='text-align: center; font-size: 24px; line-height: 1.6;'>Powerful Imagery That Connects Your Brand with the Audience You're Meant to Reach</p>",
                "align": "center",
                "text_color": "#FFFFFF"
              }
            },
            {
              "id": "hero-buttons",
              "elType": "widget",
              "widgetType": "button",
              "settings": {
                "text": "Discover Your Visual Story",
                "link": {"url": "#contact-form"},
                "align": "center",
                "size": "lg",
                "button_type": "primary"
              }
            }
          ]
        }
      ]
    },
    {
      "id": "gallery-bar-section",
      "elType": "section",
      "settings": {
        "_title": "4-Box Gallery Bar",
        "layout": "full_width",
        "content_width": "full",
        "background_background": "classic",
        "background_color": "#000000",
        "padding": {"unit": "px", "top": "60", "right": "20", "bottom": "60", "left": "20", "isLinked": false}
      },
      "elements": [
        {
          "id": "gallery-column-1",
          "elType": "column",
          "settings": {
            "_column_size": 25,
            "_column_size_tablet": 50,
            "_column_size_mobile": 100,
            "background_background": "classic",
            "background_image": {"url": "[uc_local]assets/images/gallery-1.jpg"},
            "background_size": "cover",
            "background_position": "center",
            "padding": {"unit": "px", "top": "40", "right": "30", "bottom": "40", "left": "30"}
          },
          "elements": [
            {
              "id": "gallery-text-1",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Brand Photography",
                "header_size": "h3",
                "color": "#FFFFFF"
              }
            },
            {
              "id": "gallery-desc-1",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p>Visuals that elevate your brand and resonate with your ideal audience.</p>",
                "text_color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "gallery-column-2",
          "elType": "column",
          "settings": {
            "_column_size": 25,
            "_column_size_tablet": 50,
            "_column_size_mobile": 100,
            "background_background": "classic",
            "background_image": {"url": "[uc_local]assets/images/gallery-2.jpg"},
            "background_size": "cover",
            "background_position": "center",
            "padding": {"unit": "px", "top": "40", "right": "30", "bottom": "40", "left": "30"}
          },
          "elements": [
            {
              "id": "gallery-text-2",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Documentary Stories",
                "header_size": "h3",
                "color": "#FFFFFF"
              }
            },
            {
              "id": "gallery-desc-2",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p>Authentic moments that reveal the heart of your brand story.</p>",
                "text_color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "gallery-column-3",
          "elType": "column",
          "settings": {
            "_column_size": 25,
            "_column_size_tablet": 50,
            "_column_size_mobile": 100,
            "background_background": "classic",
            "background_image": {"url": "[uc_local]assets/images/gallery-3.jpg"},
            "background_size": "cover",
            "background_position": "center",
            "padding": {"unit": "px", "top": "40", "right": "30", "bottom": "40", "left": "30"}
          },
          "elements": [
            {
              "id": "gallery-text-3",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Portrait Sessions",
                "header_size": "h3",
                "color": "#FFFFFF"
              }
            },
            {
              "id": "gallery-desc-3",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p>Images that capture your authentic presence and build instant trust.</p>",
                "text_color": "#FFFFFF"
              }
            }
          ]
        },
        {
          "id": "gallery-column-4",
          "elType": "column",
          "settings": {
            "_column_size": 25,
            "_column_size_tablet": 50,
            "_column_size_mobile": 100,
            "background_background": "classic",
            "background_image": {"url": "[uc_local]assets/images/gallery-4.jpg"},
            "background_size": "cover",
            "background_position": "center",
            "padding": {"unit": "px", "top": "40", "right": "30", "bottom": "40", "left": "30"}
          },
          "elements": [
            {
              "id": "gallery-text-4",
              "elType": "widget",
              "widgetType": "heading",
              "settings": {
                "title": "Event Coverage",
                "header_size": "h3",
                "color": "#FFFFFF"
              }
            },
            {
              "id": "gallery-desc-4",
              "elType": "widget",
              "widgetType": "text-editor",
              "settings": {
                "editor": "<p>The energy and emotion of your moments, preserved forever.</p>",
                "text_color": "#FFFFFF"
              }
            }
          ]
        }
      ]
    }
  ]
}
